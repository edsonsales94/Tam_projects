METHOD CRIALOG() CLASS ARQTXT
  Local aArea := GetARea()
  Local lRet  := .T.
  
  If File(::cFileTXT)
    If !(::ABRIRTXT())
      lRet := .F.
    Endif
  Else
    If !(::CRIARTXT())
      lRet := .F.
    Endif
  Endif
  FSeek(::nFOpened , 0 , 2)
                                                                                
  RestArea(aArea)
RETURN lRet

