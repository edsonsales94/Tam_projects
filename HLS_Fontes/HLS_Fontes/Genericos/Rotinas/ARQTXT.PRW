*/
METHOD QTDLINHA() CLASS ARQTXT
  Local aArea    := GetArea()
  Local nRet     := 0
  Local cLinha   := ""
  Local cAux     := ""
  Local nQtdRead := 0
  Local nLidos   := 0

  fSeek(::nFOpened,0,0)
  While nLidos < ::nTamFile  
    cAux := Space(::nTamLin)
    If fRead(::nFOpened,@cAux,::nTamLin) <> ::nTamLin
      Exit
    Endif
    
    nLidos += ::nTamLin
    cLinha += cAux
    
    If Len(cLinha) > 2 .AND. SUBSTR( cLinha , (Len(cLinha) - 1) , 2 ) == CHR(13)+CHR(10)
      nRet++
    Endif
  Enddo
  
  fSeek(::nFOpened,0,0)
  
  RestArea(aArea)
RETURN nRet

