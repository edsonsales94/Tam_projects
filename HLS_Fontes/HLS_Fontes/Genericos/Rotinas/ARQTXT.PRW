METHOD LINHATXT() CLASS ARQTXT
  Local aArea    := GetArea()
  Local aRet     := {}
  Local cLinha   := ""
  Local cAux     := ""
  Local nQtdRead := 0
  
  While ::nLidos < ::nTamFile  
    cAux := Space(::nTamLin)
    If fRead(::nFOpened,@cAux,::nTamLin) <> ::nTamLin
//      Alert("Falha na leitura do arquivo TXT. Arquivo : "+ ::cFileTXT)
      Conout("Falha na leitura do arquivo TXT. Arquivo : "+ ::cFileTXT)
      Exit
    Endif
    
    ::nLidos += ::nTamLin
    cLinha += cAux
    
    If Len(cLinha) >= 2 .AND. SUBSTR( cLinha , (Len(cLinha) - 1) , 2 ) == CHR(13)+CHR(10)
      Exit
    Endif
  Enddo
  
  RestArea(aArea)
RETURN cLinha

