METHOD GRAVALOG( cTexto ) CLASS ARQTXT
  Local aArea := GetArea()
  Local lRet  := .T.
  
  FSeek(::nFOpened , 0 , 2)      
  FWrite(::nFOpened , cTexto, Len(cTexto) + 2)
		
  RestArea(aArea)
RETURN lRet