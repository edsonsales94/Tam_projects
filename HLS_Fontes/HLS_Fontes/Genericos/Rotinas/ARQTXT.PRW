METHOD ABRIRTXT() CLASS ARQTXT
  Local aArea  := GetArea()
  Local lRet   := .T.

  ::nFOpened := fOpen(::cFileTXT,::nModoAbr)
  If ::nFOpened < 0
//  Alert("Falha na abertura do arquivo TXT. Arquivo : "+ ::cFileTXT)
    Conout("Falha na abertura do arquivo TXT. Arquivo : "+ ::cFileTXT)
    lRet := .F.
  Else
    ::nTamFile := fSeek(::nFOpened,0,2)
    fSeek(::nFOpened,0,0)
  Endif
  
  RestArea(aArea)
RETURN lRet

