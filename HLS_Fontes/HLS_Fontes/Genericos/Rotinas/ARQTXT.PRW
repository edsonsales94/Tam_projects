METHOD CRIARTXT() CLASS ARQTXT
  Local aArea := GetArea()
  Local lRet := .T.
  
  ::nFOpened := FCreate(::cFileTXT)
  If ::nFOpened < 0
//    Alert("Falha na cria็ใo do arquivo TXT. Arquivo : "+ ::cFileTXT)
    Conout("Falha na cria็ใo do arquivo TXT. Arquivo : "+ ::cFileTXT)
    lRet := .F.	
  Endif

  RestArea(aArea)
RETURN lRet

